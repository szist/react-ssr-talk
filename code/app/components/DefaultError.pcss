.container {
  align-items: center;
  background-color: white;
  border-radius: 8px;
  color: black;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0 auto;
  padding: 10px;
  position: relative;

  & h1 {
    color: gray;
    font-size: 48px;
    line-height: 1em;
  }

  & h3 {
    font-size: 24px;
    line-height: 1em;
  }
}
