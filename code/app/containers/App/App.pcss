.nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content: flex-start;
}

.nav > li {
  position: relative;
  display: block;
  text-transform: uppercase;
  font-weight: bold;
}

.nav > li > a {
  display: block;
  text-decoration: none;
  padding: 15px 15px;
  background-color: #ffffff;
  color: black;

  &:hover,
  &.active {
    background-color: blue;
    color: white;
  }
}
